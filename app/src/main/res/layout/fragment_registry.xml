<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_row"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_registry_list_row"
    android:paddingEnd="@dimen/padding_registry_list_row"
    android:paddingStart="@dimen/padding_registry_list_row"
    android:paddingTop="@dimen/padding_registry_list_row">

    <RelativeLayout
        android:id="@+id/registry_item_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_registry_item_icon_start_end"
        android:paddingEnd="@dimen/padding_registry_item_icon_start_end"
        android:paddingTop="@dimen/padding_registry_item_icon_top_bottom"
        android:paddingBottom="@dimen/padding_registry_item_icon_top_bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/registry_item_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_circle" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/registry_item_container"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingEnd="42dp"
        android:paddingStart="42dp">

        <TextView
            android:id="@+id/registry_item_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registry_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="textStart"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/registry_item_options_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/padding_registry_item_icon_start_end"
        android:paddingEnd="20dp"
        android:paddingTop="@dimen/padding_registry_item_icon_top_bottom"
        android:paddingBottom="@dimen/padding_registry_item_icon_top_bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/registry_item_options"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_more_options_dark_grey_24dp" />
    </RelativeLayout>

</RelativeLayout>
